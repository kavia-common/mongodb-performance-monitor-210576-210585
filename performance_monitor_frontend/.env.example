# Frontend configuration (Create React App)
# Copy to .env (do not commit secrets).

# Backend API base URL (FastAPI)
REACT_APP_API_BASE_URL=http://localhost:8000

# Optional WebSocket URL (if backend exposes WS)
REACT_APP_WS_URL=ws://localhost:8000/ws

# Optional feature flags (comma/semicolon separated key=value)
# Examples:
# - Use real backend metrics/instances when routes exist:
#   REACT_APP_FEATURE_FLAGS=metricsApi=real,instancesApi=real
# - Default behavior uses mock for metrics/instances.
#
# Alerts/Recommendations are always attempted against backend; UI falls back gracefully on 404.
REACT_APP_FEATURE_FLAGS=metricsApi=mock,instancesApi=mock

# Optional: enable WS scaffold UI on Dashboard
REACT_APP_EXPERIMENTS_ENABLED=false

